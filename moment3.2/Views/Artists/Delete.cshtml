@model moment3._2.Models.Artist

@{
    ViewData["Title"] = "Radera artist";
}

<h1>Radera artist</h1>

<h3>Vill du verkligen radera denna artist?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
        Namn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ArtistId" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a asp-action="Index">Gå tillbaka till listan</a>
    </form>
</div>
