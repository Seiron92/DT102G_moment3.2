@model moment3._2.Models.Rent

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Detaljer</h1>

<div>
    <h4>Hyrd CD</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
      Namn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Lånedatum
        </dt>
        <dd class="col-sm-10">
            @{string date = Model.RentDate.ToString("yyyy-MM-dd"); }
                @date
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cd.CdId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RentId">Ändra</a> |
    <a asp-action="Index">Gå tillbaka till listan</a>
</div>
